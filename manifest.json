{
  "manifest_version": 2,
  "name": "Envia Whatsapps",
  "description": "Envia missatges de Whatsapp",
  "version": "1.0",
  "web_accessible_resources" : ["/main.js"],
  "content_scripts": [{
    "matches": ["https://web.whatsapp.com/*"],
    "js": ["ui.js"],
    "css": ["main.css"],
    "run_at": "document_end"
  }],
  "permissions":[
        "activeTab"
    ],
  "page_action": {
    "default_icon": "img.png",
    "default_popup": "popup.html",
    "default_title": "Envia missatges de Whatsapp"
  }
}
